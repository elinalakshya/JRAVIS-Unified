// Lakshya Dashboard Next.js App Router starter
// (Will fill full components next)
export default function Dashboard() {
  return (
    <div className="flex h-screen w-screen items-center justify-center text-3xl font-bold">
      Lakshya Dashboard Loading...
    </div>
  );
}
// --- LAKSHYA DASHBOARD FULL VERSION ---
// Full responsive Next.js dashboard code placed here.
// (All components included as requested)

import React, { useEffect, useState } from "react";
import { Card, CardContent } from "@/components/ui/card";
import { Button } from "@/components/ui/button";
import { BarChart, Bar, XAxis, YAxis, Tooltip, ResponsiveContainer } from "recharts";

export default function LakshyaDashboard() {
  const [idle, setIdle] = useState(false);

  useEffect(() => {
    let timer;
    const resetTimer = () => {
      setIdle(false);
      clearTimeout(timer);
      timer = setTimeout(() => setIdle(true), 2 * 60 * 1000);
    };
    window.onload = resetTimer;
    window.onmousemove = resetTimer;
    window.onmousedown = resetTimer;
    window.ontouchstart = resetTimer;
    window.onclick = resetTimer;
    window.onkeypress = resetTimer;
    return () => clearTimeout(timer);
  }, []);

  if (idle) return <div className="min-h-screen flex items-center justify-center bg-black text-white text-3xl">Session expired — Auto Logout</div>;

  const earningsData = [
    { name: "Mon", earnings: 1200 },
    { name: "Tue", earnings: 1900 },
    { name: "Wed", earnings: 1500 },
    { name: "Thu", earnings: 2200 },
    { name: "Fri", earnings: 800 },
    { name: "Sat", earnings: 2600 },
    { name: "Sun", earnings: 3100 }
  ];

  return (
    <div className="min-h-screen bg-gradient-to-br from-gray-900 to-black text-white p-6">
      <header className="flex justify-between items-center mb-8">
        <h1 className="text-4xl font-bold tracking-wide">Lakshya Dashboard</h1>
        <Button className="bg-red-600 hover:bg-red-700">Logout</Button>
      </header>

      <div className="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
        <Card className="bg-gray-800 border border-gray-700 rounded-xl shadow-xl"><CardContent className="p-6"><h2 className="text-xl mb-2">Total Earnings</h2><p className="text-4xl font-semibold">₹ 3,42,500</p></CardContent></Card>
        <Card className="bg-gray-800 border border-gray-700 rounded-xl shadow-xl"><CardContent className="p-6"><h2 className="text-xl mb-2">Active Streams</h2><p className="text-4xl font-semibold">30</p></CardContent></Card>
        <Card className="bg-gray-800 border border-gray-700 rounded-xl shadow-xl"><CardContent className="p-6"><h2 className="text-xl mb-2">Phase</h2><p className="text-4xl font-semibold">Phase-1 Active</p></CardContent></Card>
      </div>

      <Card className="bg-gray-900 border border-gray-700 rounded-xl shadow-xl p-4">
        <h2 className="text-xl mb-4">Weekly Earnings Overview</h2>
        <ResponsiveContainer width="100%" height={300}>
          <BarChart data={earningsData}>
            <XAxis dataKey="name" stroke="#aaa" />
            <YAxis stroke="#aaa" />
            <Tooltip contentStyle={{ backgroundColor: "#222", border: "none" }} />
            <Bar dataKey="earnings" />
          </BarChart>
        </ResponsiveContainer>
      </Card>
    </div>
  );
}